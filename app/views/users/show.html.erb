<div class="row">
 	<div class="col-md-3">
 		<h2><%= @user.username %></h2>
 		<h3><%= @user.email %></h3>
		<% unless @user.avatar.attachment.nil? %>
 			<%= image_tag @user.avatar, class: "img-fluid" %>
 		<% else %>
 			<img src="https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder-300-grey.jpg" class="img-fluid">
 		<% end %>	
	<% if signed_in? && current_user.id != @user.id %> 
 		<%= render 'relationships/follow_form', user: @user %>
 	<% end %>
 	<% if signed_in? && (current_user.id == 1 || @user.id == current_user.id) %> 
 		<p> <p>
 		<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info"%> 
    	<%= link_to "Delete",@user,method: :delete, data: { confirm: "You sure?" },class: "btn btn-danger"%>
	<% end %>
	</div>
	<div class="col-md-9">
 		<%= render @user.posts %>
 	</div>
</div>
