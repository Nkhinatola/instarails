
	<% if flash[:error] %>
		<h2><%= flash[:error] %>
			<% flash[:error] = nil %>
		</h2>
	<% end %>	
<%= form_for(:session, url: login_path) do |f| %>
	<%= f.text_field :login, placeholder: "username or email" %>
	<%= f.password_field :password, placeholder: "password" %>
	<%= f.submit "Login" %>
	<%= f.check_box :remember_me %>
 	<span>Remember me on this computer</span>

<% end %>	